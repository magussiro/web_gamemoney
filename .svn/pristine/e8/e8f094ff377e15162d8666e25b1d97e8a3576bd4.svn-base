function changePlayImg() {
    $("header #hd_play").css("background-image", "url('img/Night_Play_2.png')");
    setTimeout(function() {
        $("header #hd_play").css("background-image", "url('img/Night_Play_1.png')");
    }, 500);
}

setInterval("changePlayImg()", 1000);

