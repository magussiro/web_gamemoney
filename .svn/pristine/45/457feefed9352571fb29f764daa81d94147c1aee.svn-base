#md_intro {
    margin-top: 20px;
}

#md_intro_1,
#md_intro_2 {
    padding: 20px;
}

/* #md_intro_1 START */

#md_intro_1 .tab_level_2,
#md_intro_2 .tab_level_2 {
    border: 1px solid #fff;
    padding-top: 20px;
    min-height: 332px;
}

#md_intro_1 .tab_level_2 button {
    color: #111;
}

#md_game_tab1 .game_icon_tab li,
#md_game .game_icon_tab li {
    width: 90px;
    height: 90px;
    border-radius: 15px;
    border: none;
    overflow: hidden;
    margin: 0px 0px 20px 20px;
    background: transparent;
    background-color: transparent;
}

#md_game_tab1 .game_icon_tab li:hover,
#md_game .game_icon_tab li:hover {
    box-shadow: 0px 0px 10px #fff;
}

#md_game_tab1 .game_icon_tab li.ui-tabs-active,
#md_game .game_icon_tab li.ui-tabs-active {
    box-shadow: 0px 0px 10px #fff;
}

#md_game_tab1 .game_icon_tab li a,
#md_game .game_icon_tab li a {
    padding: 0px;
    width: 100%;
    height: 100%;
} 

#md_game_tab1 .game_icon_tab li a img,
#md_game .game_icon_tab li a img {
    width: 100%;
    height: 100%;
} 

#md_game_tab1 .game_icon_tab li a img:hover,
#md_game .game_icon_tab li a img:hover {
    box-shadow: 0px 0px 10px #fff;
}

#md_game_tab1 .game_icon_tab_div,
#md_game .game_icon_tab_div {
    padding: 0px 20px 20px 20px;
}

#md_intro_1 .md_game_banner {
    width: 100%;
    height: 165px;
    margin-top: 20px;
    background-color: transparent;
    text-align: center;
    border-top: 1px dashed #fff;
    border-bottom: 1px dashed #fff;
}

#md_intro_1 .md_game_content,
#md_intro_2 .md_guide_content {
    text-align: center;
    min-height: 300px;
    border: 1px dashed black;
    margin-top: 10px;
    padding-top: 20px;
}


/* #md_intro_1 END */
